<div class="flex flex-col items-center">
  <%= render 'avatars/current_avatar', locals: { data: { controller: "avatar" }, dom_place: 'profile' } %>

  <span class="text-2xl"><%= current_user.full_name %></span>

  <div class="flex items-center mt-4">
    <span class="mx-1 bg-sky-500 rounded-md text-white py-1 px-2 min-w-24 text-center">4 Post</span>
    <span class="mx-1 bg-sky-500 rounded-md text-white py-1 px-2 min-w-24 text-center"><%= current_user.following_data.following_count %> Following</span>
    <span class="mx-1 bg-sky-500 rounded-md text-white py-1 px-2 min-w-24 text-center"><%= current_user.following_data.followers_count %> Followers</span>
  </div>
</div>
