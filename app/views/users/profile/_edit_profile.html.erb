<div class="mt-4">

  <div>
    <%= form_with_styling model: @user, url: user_avatar_path(current_user), method: :post, multipart: true, class: "flex flex-col" do |form| %>
      <%= render 'partials/forms/file_upload', form: form, locals: { }%>

      <%= render 'partials/forms/form_submit', form: form, locals: { form_submit_label: 'user_management.save', data: { "form-changes-target": "submitButton" }, disabled: true }%>
    <% end %>
  </div>

  <div>
    <%= form_with_styling model: @user, url: user_path(current_user), method: :patch, local: true, id: 'profile-update-form', data: { controller: "form-changes" } do |form| %>

      <%= render 'partials/forms/text_field', form: form, locals: { field_label: :first_name, label_translation: 'user_management.first_name', data: { action: "input->form-changes#checkForChanges" }} %>

      <%= render 'partials/forms/text_field', form: form, locals: { field_label: :last_name, label_translation: 'user_management.last_name', data: { action: "input->form-changes#checkForChanges" }} %>

      <%= render 'partials/forms/select_field', form: form, locals: { field_label: :locale, label_translation: 'user_management.locale', options: [['English', 'en'], ['Georgian', 'ge']], data: { action: "change->form-changes#checkForChanges" } } %>

      <%= render 'partials/forms/form_submit', form: form, locals: { form_submit_label: 'user_management.save', data: { "form-changes-target": "submitButton" }, disabled: true }%>

    <% end %>
  </div>

<!--  <%#= render 'users/profile/edit_phone_number' %> #TODO: Add phone number change functionality later-->

  <div class="mt-6">
    <%= button_to init_update_password_user_path, method: :get, class: "flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600", id: "user-menu-item-2" do %>
      <%= labels_translation('user_management.init_update_password') %>
    <% end %>
  </div>
</div>