<div>
  <%= form_label(form, :phone_number, I18n.t('labels.user_management.phone_number')) %>
  <div class="flex items-center justify-between">
    <div class="mt-2">
      <%= form.select :phone_number_iso,
                      options_for_select([["+995", "ge"]], "ge"), {},
                      class: form_field_styles, required: true, readonly: true %>
    </div>

    <div class="mt-2 flex-grow">
      <%= form.telephone_field :phone_number, data: locals[:data] || {}, placeholder: "555 10 20 30", pattern: "[0-9]{3} [0-9]{2} [0-9]{2} [0-9]{2}", class: form_field_styles, required: true, readonly: locals[:readonly]  %>
    </div>
  </div>

  <%= render_field_errors(@user, :phone_number_iso) %>
  <%= render_field_errors(@user, :phone_number) %>
</div>